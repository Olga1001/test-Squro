						.d-flex 
							.select.mr-10 
								.select-item_flag 
									img(src="img/flags/afghanistan.svg", alt="afghanistan")
								ul.select-dropdown 
									li.select-option_flag(data-flag="img/flags/afghanistan.svg" data-code="+93")
										img(src="img/flags/afghanistan.svg", alt="afghanistan")
									li.select-option_flag(data-flag="img/flags/united-kingdom.svg" data-code="+44")
										img(src="img/flags/united-kingdom.svg", alt="united-kingdom")
							.relative.w-100.d-flex
