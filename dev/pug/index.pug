extends layout/main

block variables
	-var title = 'Main Page'

block content
	section.first#box 
		.container.relative
			.first-img
				img#animate.d-sm-block.d-none(src="img/common/layer_697_10108.png", alt="img")
			.swiper-container 
				.swiper-wrapper 
					each val in ['Sed ut perspiciatis unde omnis iste natus error 5000','Sed ut perspiciatis unde omnis iste natus error 6000','Sed ut perspiciatis unde omnis iste natus error 6000']
						.swiper-slide
							h2.title1#animate2=val
							a.btn(href="#") Learn Now!
			.swiper-pagination

	.points
		.container 
			h3.title2 Voluptatem points doluptas sit <br> Aspernatur aut 2000
			.justify-content-between.flex-wrap
				.points-left
					.flex-wrap
						.points-col 
							p.fw-bold.c-gray-200 Value 01 
								span.c-red *
							p.value#value1 120
							input.range#range1(type="range" min="1" max="2000" value="120" oninput="writingRangeValues1(); multValues()")
						.points-col 
							p.fw-bold.c-gray-200 Value 02
